import pygame
from hand import Hand
import random
from loading import load_card
import json

class Deck:
    def __init__(self,deck_config):
        self.cards=[]
        for i in deck_config:
            self.cards.append(load_card(i))
    @property
    def get_size(self):
        return len(self.cards)
